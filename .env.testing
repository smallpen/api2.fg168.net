# 測試環境設定
APP_NAME="Dynamic API Manager Test"
APP_ENV=testing
APP_KEY=base64:TEST_KEY_PLACEHOLDER_32_CHARACTERS
APP_DEBUG=true
APP_URL=http://localhost:8080

# 測試資料庫設定
DB_CONNECTION=mysql
DB_HOST=mysql-test
DB_PORT=3306
DB_DATABASE=api_manager_test
DB_USERNAME=test_user
DB_PASSWORD=test_secret

# Redis 測試設定
REDIS_HOST=redis-test
REDIS_PASSWORD=null
REDIS_PORT=6379

# 快取設定（測試環境使用 Redis）
CACHE_DRIVER=redis
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# 日誌設定
LOG_CHANNEL=stack
LOG_LEVEL=debug

# 郵件設定（測試環境使用 array driver）
MAIL_MAILER=array

# API 設定
API_RATE_LIMIT_DEFAULT=60
API_RATE_LIMIT_PREMIUM=1000
API_RATE_LIMIT_ENTERPRISE=10000

# JWT 設定
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_TTL=60
JWT_REFRESH_TTL=20160

# OAuth 設定（測試環境停用）
OAUTH_ENABLED=false

# Bcrypt 設定（測試環境使用較低的 rounds 以加快速度）
BCRYPT_ROUNDS=4
