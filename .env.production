# Production 環境設定範例
# 請複製此檔案為 .env.production.local 並填入實際值

# 應用程式設定
APP_NAME="Dynamic API Manager"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.example.com

# 資料庫設定
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=api_manager_prod
DB_USERNAME=api_user_prod
DB_PASSWORD=
DB_ROOT_PASSWORD=

# Redis 設定
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# 快取設定
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# 日誌設定
LOG_CHANNEL=stack
LOG_LEVEL=warning

# 郵件設定
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# API 設定
API_RATE_LIMIT_DEFAULT=60
API_RATE_LIMIT_PREMIUM=1000
API_RATE_LIMIT_ENTERPRISE=10000

# JWT 設定
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# OAuth 設定
OAUTH_ENABLED=true

# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# GitHub OAuth
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# Microsoft OAuth
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=

# 監控設定
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# SSL 設定
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/key.pem
