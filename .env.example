# 應用程式設定
APP_NAME="Dynamic API Manager"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080

# 資料庫設定
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=api_manager
DB_USERNAME=api_user
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# Redis 設定
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# 快取設定
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# 日誌設定
LOG_CHANNEL=stack
LOG_LEVEL=debug

# 郵件設定
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# API 設定
API_RATE_LIMIT_DEFAULT=60
API_RATE_LIMIT_PREMIUM=1000
API_RATE_LIMIT_ENTERPRISE=10000

# JWT 設定
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# OAuth 設定
OAUTH_ENABLED=false

# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# GitHub OAuth
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# Microsoft OAuth
OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=

# 安全設定
# IP 白名單（多個 IP 用逗號分隔，支援 CIDR 表示法）
IP_WHITELIST_DEFAULT=
IP_WHITELIST_ADMIN=
IP_WHITELIST_API=

# CORS 設定
CORS_ALLOWED_ORIGINS=*

# 密碼政策
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_EXPIRES_DAYS=90

# Token 設定
TOKEN_LENGTH=64
TOKEN_TTL=60
TOKEN_REFRESH_TTL=20160

# 安全防護
SQL_INJECTION_PROTECTION=true
XSS_PROTECTION=true
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true

# 審計日誌
AUDIT_LOGGING_ENABLED=true

# 快取 TTL 設定
CACHE_TTL_CONFIG=3600
CACHE_TTL_PERMISSIONS=1800
CACHE_TTL_QUERY=300
CACHE_TTL_DEFAULT=3600
